# Aliases
# alias alias_name="command_to_run"

# Long format directory listing
alias ll="ls -la"

# Open paint.NET
alias paint="paintdotnet"

# Echo my public IP
alias myip="curl ipinfo.ip/ip"

# Open vim
alias v="vim"

# Git commands
alias gcm="git checkout master"
alias gc="git checkout"
alias gnb="git checkout -b"
alias gpl="git pull"
alias gps="git push origin"
alias gmm="git merge master"

# Yarn commands
alias yl="yarn lint:ts"

# Clear screen
alias cls="clear"

# Source .bashrc
alias source="source ~/.bashrc"

# Open Explorer
alias e="explorer"

